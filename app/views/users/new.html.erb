<%= render 'shared/errors', object: @user %>

<%= form_with model: @user do |form| %>
  <div class="field">
    <%= form.label :full_name, 'Nome Completo' %>
    <%= form.text_field :full_name, required: true %>
  </div>
  <div class="field">
    <%= form.label :cpf, 'CPF' %>
    <%= form.text_field :cpf, required: true %>
  </div>
  <div class="field">
    <%= form.label :phone, 'Telefone' %>
    <%= form.text_field :phone, required: true %>
  </div>
  <div class="field">
    <%= form.label :email, 'E-mail' %>
    <%= form.email_field :email, required: true %>
  </div>
  <div class="actions">
    <%= form.submit 'Cadastrar' %>
  </div>
<% end %>

<br>
<%= link_to 'Voltar', users_path, class: 'btn-secondary' %>