<div class="admin-header">
  <h1>Usuários Cadastrados</h1>
  <%= link_to 'Cadastrar Novo Usuário', new_user_path, class: 'btn-primary' %>
</div>

<table class="admin-table stylish-table">
  <thead>
    <tr>
      <th>Nome Completo</th>
      <th>CPF</th>
      <th>Telefone</th>
      <th>E-mail</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.cpf %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Voltar ao Acervo', books_path, class: 'btn-secondary' %>