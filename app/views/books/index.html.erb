<div class="admin-header">
  <h1>Gerenciar Livros</h1>
  <%= link_to 'Novo Livro', new_book_path, class: 'btn-primary' %>
</div>

<table class="admin-table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Autor</th>
      <th>Categoria</th>
      <th>Status</th>
      <th colspan="2">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.category.name %></td>
        <td><%= book.status %></td>
        <td><%= link_to 'Editar', edit_book_path(book) %></td>
        <td>
          <%= button_to 'Deletar', book, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Voltar para o Dashboard', root_path, class: 'btn-secondary' %>