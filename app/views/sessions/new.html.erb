<%= form_with url: login_path, method: :post do |form| %>
  <div class="field">
    <%= form.label :email, 'E-mail' %>
    <%= form.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= form.label :password, 'Senha' %>
    <%= form.password_field :password, required: true %>
  </div>

  <div class="actions">
    <%= form.submit 'Entrar' %>
  </div>
<% end %>