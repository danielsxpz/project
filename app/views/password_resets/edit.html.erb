<h1>Redefina sua senha</h1>

<%= form_with model: @librarian, url: password_reset_path(params[:token]), method: :patch do |form| %>
  <%= render 'shared/errors', object: @librarian %>

  <div class="field">
    <%= form.label :password, "Nova Senha" %>
    <%= form.password_field :password, required: true %>
  </div>
  
  <div class="field">
    <%= form.label :password_confirmation, "Confirme a Nova Senha" %>
    <%= form.password_field :password_confirmation, required: true %>
  </div>

  <div class="actions">
    <%= form.submit "Salvar nova senha" %>
  </div>
<% end %>